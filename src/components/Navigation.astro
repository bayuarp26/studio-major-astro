---
import { ThemeToggle } from './ThemeToggle.tsx';
import Button from './Button.tsx';

const currentPath = Astro.url.pathname;

const navigation = [
  { name: 'Home', href: '#hero' },
  { name: 'About', href: '#about' },
  { name: 'Skills', href: '#skills' },
  { name: 'Projects', href: '#projects' },
  { name: 'Contact', href: '#contact' },
];
---

<header class="sticky top-0 z-50 w-full border-b border-border/40 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="container flex h-16 max-w-screen-2xl items-center justify-between px-4">
    <a href="#hero" class="mr-6 flex items-center space-x-2">
      <span class="text-2xl font-bold text-primary">
        Studio Major
      </span>
    </a>
    
    <nav class="hidden md:flex md:items-center md:gap-6 text-sm">
      {navigation.map((item) => (
        <a
          href={item.href}
          class="font-medium transition-colors hover:text-primary text-foreground/60 hover:text-primary"
        >
          {item.name}
        </a>
      ))}
    </nav>
    
    <div class="flex items-center gap-2">
      <Button client:load className="hidden md:flex">
        <a href="#contact">Contact Me</a>
      </Button>
      <ThemeToggle client:load />
    </div>
  </div>
</header>
